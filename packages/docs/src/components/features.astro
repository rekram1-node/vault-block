---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";

const features: Array<FeatureItem> = [
  {
    title: "Military-Grade Encryption",
    description:
      "Your data is protected with AES-256-GCM encryption, ensuring the highest level of security for your vaults.",
    icon: "mdi:shield-lock",
  },
  {
    title: "Secure Password Storage",
    description:
      "We utilize Argon2ID for secure password hashing, following OWASP guidelines to ensure your credentials are safe and sound.",
    icon: "mdi:account-key",
  },
  {
    title: "End-to-End Encryption",
    description:
      "All vaults are encrypted end-to-end, so only you and those you authorize have access to your sensitive information.",
    icon: "mdi:lock",
  },
  {
    title: "Seamless Notion Integration",
    description:
      "Effortlessly integrate with Notion, allowing you to embed and manage your encrypted vaults directly within your Notion pages.",
    icon: "mdi:notebook",
  },
  {
    title: "Local-First Collaboration (Coming Soon)",
    description:
      "We're working on collaborative features to allow real-time editing with a local first experience",
    icon: "mdi:account-multiple",
  },
  {
    title: "Secure File Uploads (Coming Soon)",
    description:
      "Easily upload files into your vaults, ensuring all content is encrypted for maximum security and privacy.",
    icon: "mdi:upload",
},
];
---

<ContentSection title="Features" id="features">
  <Fragment slot="lead">
    Our app comes <span class="text-primary">fully secured</span> with the
    latest encryption technologies. We prioritize your
    <span class="text-primary">privacy</span> and <span class="text-primary">security</span>.
  </Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="size-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} class="size-full" />
          </div>
          <p class="text-center font-extrabold text-xl">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
